---
import ThemeIcon from './ThemeIcon.astro'
---

<header
  class="flex w-full px-8 py-4 relative sm:sticky top-0 z-50 left-0 right-0 dark:bg-[#02070c3f] mx-auto max-w-6xl backdrop-blur-sm border-b border-slate-300 dark:border-slate-800"
>
  <nav class="flex w-full sm:justify-between justify-center">
    <span class="text-2xl sm:flex hidden">AH <span id="repeated">_</span></span>
    <ul class="flex justify-center gap-8">
      <li class="flex justify-center items-center">
        <a href="/" rel="prefetch" class="hover:text-slate-400 text-xl">~</a>
      </li>
      <li class="flex justify-center items-center">
        <a href="/blog" rel="prefetch" class="hover:text-slate-400">blog</a>
      </li>
      <li class="flex justify-center items-center">
        <a href="/projects" rel="prefetch" class="hover:text-slate-400">projects</a>
      </li>
      <li class="flex justify-center items-center">
        <ThemeIcon />
      </li>
    </ul>
  </nav>
</header>

<script>
  const repeated = document.getElementById('repeated')
  const repeatedText = '_'

  if (repeated) {
    repeated.innerText = repeatedText
    const setInterval = window.setInterval(() => {
      if (repeated.innerText === repeatedText) {
        repeated.innerText = ''
      } else {
        repeated.innerText = repeatedText
      }
    }, 600)
  }
</script>
